<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
    <div class="d-lg-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center mb-4 mb-lg-0">
        <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
      </div>
      <td><%= render 'relationships/follow_btn', user: @user %></td>
    </div>
    <hr class="my-5">
    <div>
      <div class="mb-3">
        <h4>Name</h4>
        <%= @user.name %>
      </div>
      <div class="mb-3">
        <h4>Profile</h4>
        <%= @user.profile %>
      </div>
      <div class="mb-3">
        <h4>Hobby</h4>
        <%= @user.hobby %>
      </div>
    </div>
  </div>
</div>
